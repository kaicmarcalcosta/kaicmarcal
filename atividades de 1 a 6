atividades 4 - 
using System;

class Program
{
    static void Main()
    {
        // Solicita ao usuário o valor das comissões recebidas na semana
        Console.Write("Digite o valor das comissões recebidas na semana: ");
        
        // Lê o valor inserido pelo usuário e converte para decimal
        decimal comissao = Convert.ToDecimal(Console.ReadLine());
        
        // Exibe o valor das comissões recebidas
        Console.WriteLine($"Valor das comissões recebidas: {comissao}");
    }
}
////////////////////////////////////////////////////////////////////////////////////
atividades 5 - 
using System;

class Program
{
    static void Main()
    {
        // Defina as variáveis
        double horasTrabalhadas;
        double taxaPagamento;
        double comissoes;

        // Solicita entrada do usuário
        Console.Write("Digite o número de horas trabalhadas: ");
        horasTrabalhadas = Convert.ToDouble(Console.ReadLine());

        Console.Write("Digite a taxa de pagamento por hora: ");
        taxaPagamento = Convert.ToDouble(Console.ReadLine());

        Console.Write("Digite o valor total das comissões: ");
        comissoes = Convert.ToDouble(Console.ReadLine());

        // Calcula o salário bruto
        double salarioBruto = (horasTrabalhadas * taxaPagamento) + comissoes;

        // Exibe o resultado
        Console.WriteLine("O salário bruto é: R$ " + salarioBruto);
    }
}
