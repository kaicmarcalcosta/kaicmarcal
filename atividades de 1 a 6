atividade 1 - 
using System;

class Program
{
    static void Main()
    {
        // Solicita ao usuário para inserir o nome do funcionário
        Console.Write("Digite o nome do funcionário: ");
        string nome = Console.ReadLine();
        
        // Exibe o nome inserido
        Console.WriteLine("Nome do funcionário: " + nome);
    }
}
