atividades 2 - 
using System;

class Program
{
    static void Main()
    {
        Console.WriteLine("Insira as horas trabalhadas na semana:");
        int horasTrabalhadas = int.Parse(Console.ReadLine());

        Console.WriteLine("Você trabalhou " + horasTrabalhadas + " horas esta semana.");
    }
}

/////////////////////////////////////////////////////////////////////////////////////
atividades 3 - using System;

class Program
{
    static void Main()
    {
        // Pede a taxa de pagamento por hora
        Console.Write("Insira a taxa de pagamento por hora: ");
        
        // Lê a entrada do usuário e converte para double
        double taxaPagamentoPorHora = Convert.ToDouble(Console.ReadLine());
        
        // Mostra a taxa inserida
        Console.WriteLine($"A taxa de pagamento por hora é: {taxaPagamentoPorHora}");
    }
}
