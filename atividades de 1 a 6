atividades 6 -
using System;

class Program
{
    static void Main()
    {
        // Nome do funcionário
        string nome = "kaic marçal costa";
        
        // Salário total (decimal)
        decimal salarioTotal = 2500.75m;
        
        // Exibindo as informações
        Console.WriteLine("Nome do Funcionário: " + nome);
        Console.WriteLine("Salário Total: " + salarioTotal);
    }
}
